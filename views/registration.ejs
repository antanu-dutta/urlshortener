<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
      integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include("partials/header") %>

    <div class="container">
      <div class="register-container">
        <!-- Left illustration -->
        <div class="register-left">
          <img src="/images/login.jpg" alt="Register Illustration" />
        </div>

        <!-- Right form -->
        <div class="register-right">
          <h2>Create an Account âœ¨</h2>
          <form action="/auth/registration" method="POST" class="register-form">
            <div class="form-group">
              <label for="name"
                ><i class="fa-solid fa-signature"></i> Full Name</label
              >
              <input type="text" id="name" name="name" required />
            </div>

            <div class="form-group">
              <label for="email">
                <i class="fa-solid fa-envelope"></i> Email</label
              >
              <input type="email" id="email" name="email" required />
            </div>

            <div class="form-group">
              <label for="password"
                ><i class="fa-solid fa-lock"></i> Password</label
              >
              <input type="password" id="password" name="password" required />
            </div>

            <% if (errors && errors.length > 0) { %> <%
            errors.forEach(function(error) { %>
            <p class="flash-error"><%= error %></p>
            <% }) %> <% } %>

            <button type="submit">Register</button>

            <p class="login-text">
              Already have an account? <a href="/login">Login</a>
            </p>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
